generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  discord String @unique
  name  String @unique
  password String
}

model Scenario {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  event_date DateTime
  members String[]
  world String
  desc String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model News {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  desc String
  body String
  slug Int
  published_at DateTime
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
} 